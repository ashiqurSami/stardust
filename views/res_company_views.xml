<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the res.company view to add COO and MD signature fields -->
        <record id="res_company_form_inherit" model="ir.ui.view">
            <field name="name">res.company.form.inherit.stardust</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!-- Add COO Signature Field at the end of the form view -->
                <xpath expr="//notebook" position="inside">
                    <page string="Signatures" name="signatures">
                        <group>
                            <group>
                                <div class="text-muted">Upload a transparent PNG/JPG of the signatory's signature.</div>
                                <field name="coo_signature_image"
                                       widget="image"
                                       options="{'accepted_file_extensions': '.jpeg,.jpg,.png','preview_image':'coo_signature_image'}"
                                       class="o_signature_image"/>
                            </group>
                            <group>
                                <div class="text-muted">Upload a transparent PNG/JPG of the signatory's signature.</div>
                                <field name="md_signature_image"
                                       widget="image"
                                       options="{'accepted_file_extensions': '.jpeg,.jpg,.png','preview_image':'md_signature_image'}"
                                       class="o_signature_image"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>