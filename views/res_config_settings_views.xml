<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stardust</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app name="stardust" string="Stardust" data-string="Stardust">
                    <block title="Approval Settings">
                        <setting id="stardust_laptop_threshold_setting"
                                 help="If a laptop line unit price exceeds this amount, MD approval is required.">
                            <field name="laptop_threshold_price"/>
                            <label for="laptop_threshold_price" class="o_light_label"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
